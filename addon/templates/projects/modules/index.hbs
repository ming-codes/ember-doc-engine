<header>
  <h1 id="module__name">{{model.name}} module</h1>
</header>

<hr>

<section id="module__parent">
  Parent:
  {{!#link-to "project.modules" "ember" model.supermodule.name}}
    {{model.supermodule.name}}
  {{!/link-to}}
</section>

<section id="module__description">
  {{remarkable model.description}}
</section>

<section id="module__submodules">
  <h2>Submodules</h2>
  <ul>
    {{#each model.submodules as |module|}}
      <li>
        {{!#link-to "project.modules" "ember" module.name}}
          {{module.name}}
        {{!/link-to}}
      </li>
    {{/each}}
  </ul>
</section>

<section id="module__classes">
  <h2>Classes</h2>
  <ul>
    {{#each model.allClasses as |class|}}
      <li>
        {{!#link-to "project.modules.classes" "ember" "ember" class.name}}
          {{class.name}}
        {{!/link-to}}
      </li>
    {{/each}}
  </ul>
</section>
